{
  "manifest_version": 3,
  "name": "CruciVault",
  "version": "1.0.0",
  "description": "Bittensor wallet extension.",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_icon": {
      "16": "crucivault.png",
      "48": "crucivault.png",
      "128": "crucivault.png"
    },
    "default_title": "Open CruciVault"
  },
  "permissions": [
    "storage",
    "sidePanel"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "crucivault.png",
    "48": "crucivault.png",
    "128": "crucivault.png"
  }
}
